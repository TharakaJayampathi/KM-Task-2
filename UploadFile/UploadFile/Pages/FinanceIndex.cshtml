@page
@model FinanceIndexModel
@{
    ViewData["Title"] = "Finance";
}


<h1>Finance Document Management</h1>

<p>
    <a asp-page="FinanceCreate">Document Details</a>
</p>

<p>
    @using (Html.BeginForm("FinanceIndex", "FinanceIndex", FormMethod.Get))
    {
        <b>Search</b>@Html.RadioButton("Searchby", "Reference", true)<b>Reference</b>
        @Html.RadioButton("Searchby", "Name")<b>Name</b>
        @Html.TextBox("Search")<input type="submit" value="Search" />

    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Finances[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Finances[0].Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Finances[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Finances[0].Date)
            </th>
            <th>
                Upload
            </th>
            <th>Download</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Finances)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-page="FinanceUpload" asp-route-id="@item.Id">Upload Document</a>
                </td>
                <td>
                    @if (item.Attachment != null)
                    {
                        <form asp-page-handler="Download" method="post" asp-route-id="@item.Id">
                            <input type="submit" class="btn btn-outline-dark" value="Download">
                        </form>
                    }
                </td>
                <td>
                    @if (item.Attachment != null)
                    {
                        <form asp-page-handler="Delete" method="post" asp-route-id="@item.Id">
                            <input type="submit" class="btn btn-outline-danger" value="Delete">
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
